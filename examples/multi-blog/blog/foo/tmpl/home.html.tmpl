{{define "content"}}
<h2>Welcome to my blog!</h2>

{{- range $month := .Archive}}
<h3>{{$month.Title}}</h3>
<ul>
  {{- range $post := $month.Posts}}
  <li>
    <a href="{{$post.URL}}">{{$post.Title}}</a>,
    <small>{{$post.Date.Short}}<sup>{{$post.Date.Suffix}}</sup></small>
  </li>
  {{- end}}
</ul>
{{- end}}
{{end}}
